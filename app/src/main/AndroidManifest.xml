<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Notification permission (required by Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Vibration permission (required for haptic feedback) -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Speech recognition permission -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Internet access permission (required for update checks) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Overlay window permission (for trackpad debug) -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- Permission to read screenshots from MediaStore -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- Query to see all installed apps that can be launched -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>

        <!-- Query to see launchers -->
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.HOME" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TitanKeys">
        <activity
            android:name=".TutorialActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.TitanKeys" />
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TitanKeys">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Activity for SYM customization -->
        <activity
            android:name=".SymCustomizationActivity"
            android:exported="false"
            android:label="@string/sym_customize_title"
            android:theme="@style/Theme.TitanKeys" />
        
        <!-- Activity for settings -->
        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:label="@string/settings_title"
            android:theme="@style/Theme.TitanKeys" />
        
        <!-- Activity for managing input method subtype languages -->
        <activity
            android:name=".LanguagesActivity"
            android:exported="false"
            android:label="@string/languages_title"
            android:theme="@style/Theme.TitanKeys" />
        
        <activity
            android:name=".InstalledDictionariesActivity"
            android:exported="false"
            android:label="@string/installed_dictionaries_title"
            android:theme="@style/Theme.TitanKeys" />

        <!-- Activity for trackpad debug -->
        <activity
            android:name=".TrackpadDebugActivity"
            android:exported="false"
            android:label="Trackpad Debug"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance" />

        <!-- Physical keyboard input method service -->
        <service
            android:name=".inputmethod.PhysicalKeyboardInputMethodService"
            android:label="@string/input_method_name"
            android:permission="android.permission.BIND_INPUT_METHOD"
            android:exported="true">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>

        <!-- Helper activity for speech recognition -->
        <activity
            android:name=".inputmethod.SpeechRecognitionActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:exported="false"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:taskAffinity="com.google.android.inputmethod.latin" />
        
        <!-- Helper activity for requesting microphone permission -->
        <activity
            android:name=".inputmethod.PermissionRequestActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:exported="false"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:taskAffinity="" />
        
        <!-- Activity for assigning launcher shortcuts -->
        <activity
            android:name=".inputmethod.LauncherShortcutAssignmentActivity"
            android:theme="@style/Theme.TitanKeys.OverlayDialog"
            android:exported="false"
            android:excludeFromRecents="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:noHistory="true"
            android:finishOnTaskLaunch="true" />

        <!-- Shizuku provider -->
        <provider
            android:name="rikka.shizuku.ShizukuProvider"
            android:authorities="${applicationId}.shizuku"
            android:multiprocess="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.INTERACT_ACROSS_USERS_FULL" />

        <!-- FileProvider for sharing clipboard images -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>
